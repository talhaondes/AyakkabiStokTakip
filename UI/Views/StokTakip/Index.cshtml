@model IEnumerable<UI.Models.GonderilenUrunler>
@{
    ViewBag.Title = "Ürün Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<table class="table">
    <thead>
        <tr>
            <th>Ürün Adı</th>
            <th>Mağaza Adı</th>
            <th>Gönderilen Tarih</th>
            <th>Gönderilen Adet</th>
            <th>Durum</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.UrunAdi</td>
                <td>@item.MagazaAdi</td>
                <td>@item.gonderilentarih.ToString("dd/MM/yyyy")</td>
                <td>@item.gonderilenadet</td>
                <td>@item.durumu</td>
            </tr>
        }
    </tbody>
</table>





